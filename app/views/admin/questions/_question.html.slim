tr.d-flex
  td.col-lg-8
    = link_to question.body, admin_question_path(question)
  td.col-lg-2.text-right
    = link_to t('links.edit'), edit_admin_question_path(question), class: 'btn btn-primary'
  td.col-lg-2.text-left
    = button_to t('links.delete'), admin_question_path(question, @test), method: :delete, data: { confirm: t('links.confirm') }, class: 'btn btn-danger'
