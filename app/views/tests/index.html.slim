.d-flex.flex-row-reverse
  .col
    .row.justify-content-start
      h1
        = t('.header')
table.table.table-hover
  thead.thead-dark
    th.border-top-0.sort-by-title.pointer scope="col"
      = t('activerecord.attributes.test.title')
      = octicon 'arrow-up', class: 'text-success hide'
      = octicon 'arrow-down', class: 'text-success hide'
    th.border-top-0 scope="col"
      = t('activerecord.models.category')
    th.border-top-0.text-center scope="col" colspan='2'
      = t('tests.index.action')
  tbody
    tr
    - if @tests.present?
      = render @tests
    - else
      p
        = t('.empty')
